@model MovieNest.Models.Movie
@{
    ViewData["Title"] = Model?.Title ?? "Details";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-3">
            @if (!string.IsNullOrWhiteSpace(Model?.VideoUrl))
            {
                <div class="ratio ratio-16x9">
                    <iframe src="@Model.VideoUrl" title="@Model.Title" allowfullscreen></iframe>
                </div>
            }
            else
            {
                <img src="https://via.placeholder.com/800x450?text=@Uri.EscapeDataString(Model?.Title ?? "Movie")" class="card-img-top" alt="@Model?.Title" />
            }
            <div class="card-body">
                <h3>@Model?.Title</h3>
                <p class="text-muted">@Model?.Genre</p>
                <p>@Model?.Description</p>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">‚Üê Back</a>
    </div>

    <aside class="col-lg-4">
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <h5>Quick info</h5>
                <ul class="list-unstyled mb-0">
                    <li><strong>ID:</strong> @Model?.Id</li>
                    <li><strong>Genre:</strong> @Model?.Genre</li>
                </ul>
            </div>
        </div>
    </aside>
</div>