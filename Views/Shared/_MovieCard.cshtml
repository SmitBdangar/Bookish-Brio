@model MovieNest.Models.Movie

<div class="card h-100 movie-card">
    <img class="card-img-top" src="https://via.placeholder.com/400x225?text=@Uri.EscapeDataString(Model.Title)" alt="@Model.Title" />
    <div class="card-body d-flex flex-column">
        <h5 class="card-title mb-1">@Model.Title</h5>
        <p class="text-muted small mb-2">@Model.Genre</p>
        <p class="card-text text-truncate mb-3">@Model.Description</p>
        <div class="mt-auto d-flex gap-2">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Details</a>
            @if (!string.IsNullOrWhiteSpace(Model.VideoUrl))
            {
                <button type="button" class="btn btn-sm btn-outline-secondary" data-trailer="@Model.VideoUrl">Watch Trailer</button>
            }
            <span class="badge bg-secondary ms-auto align-self-center">@Model.Genre</span>
        </div>
    </div>
</div>