<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MovieNest</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" class="me-2"><rect width="24" height="24" rx="4" fill="#ff6b6b"/></svg>
                <span>MovieNest</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navMenu">
                <form class="d-flex ms-auto me-3" method="get" asp-controller="Home" asp-action="Index">
                    <input name="q" class="form-control form-control-sm me-2" placeholder="Search movies, genres..." />
                    <button class="btn btn-primary btn-sm" type="submit">Search</button>
                </form>

                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="bg-dark text-light py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-6 mb-2">Discover movies, trailers and details</h1>
                    <p class="lead mb-0">Browse curated lists and watch trailers instantly.</p>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-sm">Browse All</a>
                </div>
            </div>
        </div>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 mt-auto">
        <div class="container"><small>© @DateTime.Now.Year MovieNest</small></div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // play trailer in modal
        $(document).on('click', '[data-trailer]', function(e){
            var url = $(this).data('trailer');
            $('#trailerIframe').attr('src', url);
            var myModal = new bootstrap.Modal(document.getElementById('trailerModal'));
            myModal.show();
        });
        $('#trailerModal').on('hidden.bs.modal', function () { $('#trailerIframe').attr('src',''); });
    </script>

    <!-- trailer modal -->
    <div class="modal fade" id="trailerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content bg-dark text-white">
                <div class="modal-header border-0">
                    <h5 class="modal-title">Trailer</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-0">
                    <div class="ratio ratio-16x9">
                        <iframe id="trailerIframe" src="" title="Trailer" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
